mixin viz(viz)
  table(bgcolor="white", frame="void", width="300px", cellspacing="10px")
    tr
      td(align="center", valign="middle", style='font-size: 12px;text-transform: uppercase;')= viz.title
    tr
      td
        table
          - for (var i=0;i<viz.bars.length;i++)
            - var bar = viz.bars[i];
            - var s = "text-transform: capitalize; font-size: 12px;";
              tr
                td(style=s)= bar.label
                td(style=s)= bar.valueLabel
